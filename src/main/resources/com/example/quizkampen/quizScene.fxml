<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizkampen.gameController">
   <children>
      <AnchorPane layoutX="63.0" layoutY="56.0" prefHeight="167.0" prefWidth="483.0">
         <children>
            <Label fx:id="questionLabel" alignment="CENTER" layoutX="-5.0" layoutY="91.0" prefHeight="17.0" prefWidth="488.0" text="Question" textAlignment="CENTER">
               <font>
                  <Font name="Baloo Bhai Regular" size="20.0" />
               </font></Label>
         </children>
      </AnchorPane>
      <GridPane fx:id="gameGridPane" gridLinesVisible="true" layoutX="136.0" layoutY="233.0" prefHeight="125.0" prefWidth="328.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="answer1Button" mnemonicParsing="false" onAction="#checkAnswer" prefHeight="242.0" prefWidth="370.0" text="Answer1" />
