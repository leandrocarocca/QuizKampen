            <Button fx:id="answer4Button" mnemonicParsing="false" onAction="#checkAnswer" prefHeight="187.0" prefWidth="389.0" text="Answer4" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <AnchorPane layoutY="-6.0" prefHeight="62.0" prefWidth="605.0">
         <children>
            <Label fx:id="playerLabel" alignment="CENTER" layoutX="1.0" layoutY="23.0" prefHeight="17.0" prefWidth="262.0" text="Player 1" />
            <Label fx:id="roundLabel" alignment="CENTER" layoutX="197.0" layoutY="23.0" prefHeight="17.0" prefWidth="238.0" text="Round: 1" />
            <Label fx:id="turnLabel" alignment="CENTER" layoutX="362.0" layoutY="23.0" prefHeight="17.0" prefWidth="238.0" text="Question 1 " />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
