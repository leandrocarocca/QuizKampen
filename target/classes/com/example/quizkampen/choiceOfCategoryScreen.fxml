    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="choiceOfCategoryScreen"/>
    <Label text="Choose a category:"/>
    <Button text="Sport" onAction="#switchToQuizScene"/>
    <Button text="Geography" onAction="#switchToQuizScene"/>
    <Button text="Animals" onAction="#switchToQuizScene"/>
    <Button text="Food" onAction="#switchToQuizScene"/>
    <Button text="Swedish History" onAction="#switchToQuizScene"/>
    <Button text="Music" onAction="#switchToQuizScene"/>
</VBox>
